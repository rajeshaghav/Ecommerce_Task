<%- include("navbar") %>

<section id="faq" class="faq-section py-5 bg-light">
  <div class="container">
    <h2 class="text-center mb-4">Frequently Asked Questions</h2>

    <div class="accordion accordion-flush" id="faqAccordion">
      <% faq.forEach((item, i) => {
           const qId = `faqHeading${i}`, cId = `faqCollapse${i}`;
      %>
      <div class="accordion-item mb-3 rounded shadow-sm">
        <h2 class="accordion-header" id="<%= qId %>">
          <button class="accordion-button collapsed" type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#<%= cId %>"
                  aria-expanded="false"
                  aria-controls="<%= cId %>">
            <%= item.question %>
          </button>
        </h2>
        <div id="<%= cId %>" class="accordion-collapse collapse"
             aria-labelledby="<%= qId %>"
             data-bs-parent="#faqAccordion">
          <div class="accordion-body">
            <%= item.answer %>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>

 

<%- include("footer") %>
