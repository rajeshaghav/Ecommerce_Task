<%-include("navbar")%>
<h1>Welcome To Admin</h1>
 <div class="wrapper">
    <!-- Navbar/sidebar included per your layout -->
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <h1>Dashboard</h1>
        </div>
      </section>

      <section class="content">
        <div class="container-fluid">
          <!-- KPI Cards -->
          <div class="row">
            <div class="col-lg-3 col-6">
              <div class="small-box bg-info">
                <div class="inner">
                  <h3 id="totalLeads">--</h3><p>Total Leads</p>
                </div>
                <div class="icon"><i class="fas fa-users"></i></div>
                <a href="#" class="small-box-footer">Details <i class="fas fa-arrow-circle-right"></i></a>
              </div>
            </div>
            <div class="col-lg-3 col-6">
              <div class="small-box bg-success">
                <div class="inner">
                  <h3 id="projectsCompleted">--</h3><p>Projects Completed</p>
                </div>
                <div class="icon"><i class="fas fa-check-circle"></i></div>
                <a href="#" class="small-box-footer">Details <i class="fas fa-arrow-circle-right"></i></a>
              </div>
            </div>
            <div class="col-lg-3 col-6">
              <div class="small-box bg-warning">
                <div class="inner">
                  <h3 id="quoteRequests">--</h3><p>Quote Requests</p>
                </div>
                <div class="icon"><i class="fas fa-file-invoice"></i></div>
                <a href="#" class="small-box-footer">Details <i class="fas fa-arrow-circle-right"></i></a>
              </div>
            </div>
            <div class="col-lg-3 col-6">
              <div class="small-box bg-danger">
                <div class="inner">
                  <h3 id="calculatorSubmissions">--</h3><p>Calculator Submissions</p>
                </div>
                <div class="icon"><i class="fas fa-calculator"></i></div>
                <a href="#" class="small-box-footer">Details <i class="fas fa-arrow-circle-right"></i></a>
              </div>
            </div>
          </div>

          <!-- Enquiries Graph -->
          <div class="row">
            <div class="col-12">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title"><i class="fas fa-chart-line me-2"></i>Enquiries Over Time</h3>
                </div>
                <div class="card-body">
                  <canvas id="enquiriesChart" style="min-height: 250px"></canvas>
                </div>
              </div>
            </div>
          </div>

          <!-- Recent Enquiries Feed -->
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header"><h3 class="card-title"><i class="fas fa-envelope"></i> Recent Enquiries</h3></div>
                <div class="card-body p-0">
                  <ul class="list-group list-group-flush" id="enquiryFeed">
                    <!-- JS-inserted list items -->
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <footer class="main-footer text-center py-2">&copy; 2025 Solar Admin. All rights reserved.</footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Sample configuration (replace with real API calls)
    document.getElementById('totalLeads').innerText = '128';
    document.getElementById('projectsCompleted').innerText = '34';
    document.getElementById('quoteRequests').innerText = '56';
    document.getElementById('calculatorSubmissions').innerText = '89';

    const ctx = document.getElementById('enquiriesChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul'],
        datasets: [{
          label: 'Enquiries',
          data: [12, 19, 14, 20, 30, 25, 40],
          borderColor: '#007bff',
          backgroundColor: 'rgba(0,123,255,0.2)'
        }]
      },
      options: { responsive: true, maintainAspectRatio: false }
    });

    // Populate recent enquiries
    const feed = document.getElementById('enquiryFeed');
    ['John Doe - Rooftop Install','Jane Smith - Quote Request','Acme Corp - EPC Enquiry'].forEach(txt => {
      const li = document.createElement('li');
      li.className = 'list-group-item';
      li.innerText = txt;
      feed.appendChild(li);
    });
  </script>
<%-include("footer")%>