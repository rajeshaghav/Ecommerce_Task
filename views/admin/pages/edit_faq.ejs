<%-include("../navbar")%>
<form action="/admin/pages/update_faq" method="post">
  <div class="container mt-4 bg-white shadow p-4">
      <h3>Edit FAQ</h3>
      <div class="row">
        <input type="hidden" name="id" value="<%-fdet[0].id%>">
          <div class="col-md-6 mt-3">
              Enter Question:
              <textarea name="question" class="form-control"><%- fdet[0].question %></textarea>
          </div>
          <div class="col-md-6 mt-3">
              Enter Answer:
              <textarea name="answer" class="form-control"><%- fdet[0].answer %></textarea>
          </div>
          <div class="col-md-12 mt-3 text-center">
              <button class="btn btn-success">Update Question</button>
              <a href="/admin/faq" class="btn btn-secondary">Cancel</a>
          </div>
      </div>
  </div>
</form>

<%-include("../footer")%>
